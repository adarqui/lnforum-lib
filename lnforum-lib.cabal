name:                lnforum-lib
version:             0.1.0.3
synopsis:            Misc shared code for LN
description:         Please see README.md
homepage:            http://github.com/adarqui/lnforum-lib#readme
license:             BSD3
license-file:        LICENSE
author:              Andrew Darqui
maintainer:          andrew.darqui@gmail.com
copyright:           2015 Andrew Darqui
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     LN.Lib
                       LN.Lib.Codec
                       LN.Lib.Text.Search
  build-depends:       base
                     , aeson
                     , blaze-html
                     , bytestring
                     , pureMD5
                     , text
  default-language:    Haskell2010
  default-extensions:  RecordWildCards
  ghc-options:         -Wall -Werror

test-suite lnforum-lib-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , hspec
                     , lnforum-lib
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/lnforum-lib
